<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wd.tech">
    <!-- Required -->
    <uses-permission android:name="com.bw.tech.permission.JPUSH_MESSAGE" />
    <uses-permission android:name="android.permission.RECEIVE_USER_PRESENT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- 录音 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 精准位置 gps -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="com.wd.tech.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_http"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.wd.tech.activities.CreateGroupActivity" />
        <activity android:name="com.wd.tech.activities.AddfriendActivity" />
        <activity android:name="com.wd.tech.activities.PublishActivity" />
        <activity android:name="com.wd.tech.activities.DetailsActivity" />
        <activity android:name="com.wd.tech.activities.SearchActivity" />
        <activity android:name="com.wd.tech.activities.InterestActivity" />
        <activity android:name="com.wd.tech.activities.Sign_inActivity" />
        <activity android:name="com.wd.tech.activities.SettingActivity" />
        <activity android:name="com.wd.tech.activities.TaskActivity" />
        <activity android:name="com.wd.tech.activities.IntegralActivity" />
        <activity android:name="com.wd.tech.activities.NoticeActivity" />
        <activity android:name="com.wd.tech.activities.CardActivity" />
        <activity android:name="com.wd.tech.activities.AttentionActivity" />
        <activity android:name="com.wd.tech.activities.CollectActivity" />
        <activity android:name="com.wd.tech.activities.RegisterActivity" />
        <activity android:name="com.wd.tech.activities.LoginActivity" />
        <activity android:name="com.wd.tech.activities.MainActivity" />
        <activity android:name="com.wd.tech.activities.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Since JCore2.0.0 Required SDK核心功能 -->
        <!-- 这个Service要继承JCommonService -->
        <service
            android:name="com.wd.tech.service.XService"
            android:process=":pushcore">
            <intent-filter>
                <action android:name="cn.jiguang.user.service.action" />
            </intent-filter>
        </service>
    </application>

</manifest>