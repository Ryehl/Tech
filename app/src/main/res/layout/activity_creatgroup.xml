<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateGroupActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/create_group_hd"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp" />

    <EditText
        android:id="@+id/create_group_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_group_hd"
        android:layout_centerHorizontal="true"
        android:hint="填写群名称(2-20汉字)" />

    <EditText
        android:id="@+id/create_group_infomation"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/create_group_name"
        android:hint="介绍下您的群吧，让更多的好友加入!"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/create_group_btn_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_group_infomation"
        android:text="创建" />

</RelativeLayout>