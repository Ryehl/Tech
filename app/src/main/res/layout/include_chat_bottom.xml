<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/include_chat_et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/include_chat_btn_send" />

    <Button
        android:id="@+id/include_chat_btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="发送" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_chat_et_input"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/include_chat_img_vol"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/mike" />

        <ImageView
            android:id="@+id/include_chat_img_photo"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/dcim" />

        <ImageView
            android:id="@+id/include_chat_img_camera"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/camera" />

        <ImageView
            android:id="@+id/include_chat_img_position"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/position" />
    </LinearLayout>

</RelativeLayout>