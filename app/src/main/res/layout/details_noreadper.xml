<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/noper_tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="摘要" />

    <ImageView
        android:id="@+id/noper_img_needpay"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_below="@id/noper_tv_summary"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/need_pay" />

    <TextView
        android:id="@+id/noper_tv_to_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noper_img_needpay"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_blueback"
        android:padding="10dp"
        android:text="尚未购买，付费再来阅读吧"
        android:textColor="#FFF"
        android:textSize="24sp" />

</RelativeLayout>