<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".activities.SearchFriendGroupActivity">

    <EditText
        android:id="@+id/searchfg_et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/searchfg_tv"
        android:hint="输入手机号进行查找"
        android:textColor="#000"
        android:textColorHint="#CCC" />

    <TextView
        android:id="@+id/searchfg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:text="搜索"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchfg_recy_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchfg_et_search" />

</RelativeLayout>