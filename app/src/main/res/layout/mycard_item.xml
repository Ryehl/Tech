<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:id="@+id/mycard_content"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="100dp"
        fresco:roundedCornerRadius="10dp"
        android:id="@+id/mycard_img"
        />
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mycard_time"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mycard_delete"
            android:text="删除"
            android:textColor="#58C3F3"
            />
        <ImageView

            android:layout_marginTop="5dp"
            android:id="@+id/information_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/common_icon_collect_n" />

        <TextView
            android:id="@+id/mycard_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="3"
            android:layout_marginBottom="4dp"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/information_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/common_icon_share_n" />

        <TextView
            android:id="@+id/mycard_praise_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="3"
            android:layout_marginBottom="4dp"
            android:textSize="13sp" />

    </LinearLayout>
</LinearLayout>