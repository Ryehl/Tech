<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/information_img"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/chaiquan"
        fresco:roundedCornerRadius="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/information_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="5G怨念话5G：让生活再快些"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/information_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="华为在被淹所举办的5G发布会暨2019世界移动大会预沟通"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/information_content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="华为"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/information_content_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-03-20"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/information_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="8dp"
                android:background="@mipmap/common_icon_collect_n" />

            <TextView
                android:id="@+id/information_collect_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/information_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:background="@mipmap/common_icon_share_n" />

            <TextView
                android:id="@+id/information_share_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>